/* components/hot-songtag/index.wxss */
.hotSong {
  height: 380rpx;
  /* display: flex; */
  /* flex-wrap: nowrap; */
  /* flex-direction: row; */
  margin-left: -20rpx;
  box-sizing: border-box;
  white-space: nowrap;
}

.hotSong .tags {
  /* flex-shrink: 0; */
  display: inline-block;
  width: 240rpx;
  margin-left: 20rpx;
  /* height: 240rpx; */
}
.hotSong .tags:last-child {
  margin-right: 20rpx;
}

.hotSong .tags .imgStyle {
  position: relative;
  width: 100%;
  /* border-radius: 12rpx; */
  overflow: hidden;
}
.hotSong .tags .imgStyle .count {
  position: absolute;
  bottom: 5px;
  right: 0px;
  color: #fff;
  background-color: rgb(0, 0, 0, 0.4);
  border-radius: 7rpx;
  padding: 7rpx;
  font-size: 25rpx;
  box-sizing: border-box;
}

.hotSong .tags .imgStyle .img {
  width: 100%;
  border-radius: 12rpx;
}

.hotSong .tags .tagName {
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  white-space: normal;
}