.itemStyle {
  /* width: 20%; */
margin-bottom: 10rpx;
margin-top: 20rpx;
}
.main {
  display: flex;
  overflow: hidden;
  border-radius: 12rpx;
  position: relative;
}
.imgStyle {
  width: 100%;
}
.info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #fff;
}
.info .playCount {
  position: relative;
  margin-left: 20px;
}
.info .playCount::before{
  content: "";
  position: absolute;
  left: -35rpx;
  top: 0rpx;
  width: 32rpx;
  height: 32rpx;
  background-size: cover;
  background-image: url("data:image/png;base64,");
}
.duration {
  margin-right: 10rpx;
}
.nameItem {
  font-size: 28rpx;
}