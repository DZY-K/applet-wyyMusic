/* pages/more-menus/index.wxss */
.menus {
 padding: 0 20rpx;
 box-sizing: border-box;
} 
.menuItem {
  margin-bottom: 20rpx;
}
.kind {
  font-weight: 600;
  margin-bottom: 20rpx;
}
.menuList {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.menuList .tagItem {
width: 49%;
margin-bottom: 20rpx;

box-sizing: border-box;
}
.menuList .tagItem .imgStyle {
  position: relative;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
}
.menuList .tagItem .imgStyle .img {
  width: 100%;
  border-radius: 12rpx;

}
.menuList .tagItem .imgStyle .count {
  position: absolute;
  bottom: 5px;
  right: 0px;
  color: #fff;
  background-color: rgb(0, 0, 0, 0.4);
  border-radius: 7rpx;
  padding: 7rpx;
  font-size: 25rpx;
  box-sizing: border-box;
}
.tagItem {
  font-size: 27rpx;
}